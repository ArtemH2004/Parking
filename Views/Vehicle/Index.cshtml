@model IEnumerable<Parking.Models.Vehicle>

<h2>Мои автомобили</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить новый автомобиль</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Государственный номер</th>
            <th>Год</th>
            <th>Марка</th>
            <th>Модель</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model)
        {
            <tr>
                <td>@vehicle.LicensePlate</td>
                <td>@vehicle.Year</td>
                <td>@vehicle.Brand</td>
                <td>@vehicle.Model</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@vehicle.VehicleId" class="btn btn-warning">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@vehicle.VehicleId" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
